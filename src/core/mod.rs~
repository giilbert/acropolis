pub mod ecs;
use crate::core::ecs::System;
use crate::rendering::RenderingSystem;
use std::thread;

pub struct Application {
    rendering: RenderingSystem,
}

impl Application {
    pub fn start(&mut self) {
        println!("start");

        thread::spawn(|| {
            loop {
                println!("Hello");
            }
        });

        self.rendering.init();
    }
}

impl Default for Application {
    fn default() -> Self {
        Application {
            rendering: RenderingSystem::new(),
        }
    }
}
